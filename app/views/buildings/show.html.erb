<h1 class="text-center text-secondary my-5">Building <%= @building.name %></h1>

<table class="table">
 <thead class="thead-light">
  <tr>
    <th>Number</th> <th colspan="3"></th>
  </tr> </thead>

  <tbody>
    <% @building.apartments.present? %>
    <% @building.apartments.each do |apartment| %>
    <tr>
      <td><%= apartment.number %></td>
    </tr> 
    <% end %>
  </tbody>
</table>