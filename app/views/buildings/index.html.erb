<h1 class="text-center text-secondary my-5">Buildings</h1>

<table class="table table-striped">
 <thead class="thead-dark">
  <tr>
    <th>Number</th> <th>Building</th> <th colspan="3"></th>
  </tr> </thead>

  <tbody>
    <% @buildings.each do |building| %>
    <tr>
    <th scope="row">1</th>
      <td><%= building.name %></td>
      <td><%= "id:#{building.id}" %></td>
      <td><%=link_to 'Show', building%></td>
    </tr> 
    <% end %>
  </tbody>
</table>

<div class="text-center my-4">
<%= link_to 'New Building', new_building_path, class: 'btn btn-danger' %>
</div>