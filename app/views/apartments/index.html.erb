<h1>Apartments</h1>

<table class="table">
 <thead class="thead-light">
  <tr>
    <th>Number</th> <th>Building</th> <th colspan="3"></th>
  </tr> </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
    <tr>
      <th scope="row">1</th>
        <td><%= apartment.number %></td>
        <td><%= apartment.building.name %></td>
        <td><%=link_to 'Show', apartment%></td>
    </tr> 
    <% end %>
  </tbody>
</table>

<div class="text-center my-4">
<%= link_to 'New Apartment', new_apartment_path, class: 'btn btn-danger' %>
</div>