<h1 class="text-center text-secondary my-5">Apartments</h1>

<table class="table table-striped">
 <thead class="thead-dark">
  <tr>
    <th>Number</th> <th>Building</th> <th colspan="3"></th>
  </tr> </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
    <tr>
      <td><%= apartment.number %></td>
      <td><%= apartment.building.name %></td>
      <td><%=link_to 'show apartment', building_apartment_path(@building.id, apartment.id)%></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%=link_to 'back', building_path(@building.id), class: 'btn btn-danger'%>
</div>